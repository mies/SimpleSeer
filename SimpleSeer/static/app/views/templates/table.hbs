{{#if header}}
  {{{header}}}
{{/if}}
<table class="table table-striped table-bordered">
  <thead>
    <tr class="sh"> <!-- Static Header -->
      {{#each cols}}
        <th class="{{this.key}}">{{this.title}}{{#if this.sortable}}<span class="dir empty"></span>{{/if}}</th>
      {{/each}}
    </tr>
    <tr class="ph"> <!-- Persistant Header -->
      {{#each cols}}
        <th class="{{this.key}}">{{this.title}}</th>
      {{/each}}
    </tr>
  </thead>
  <tbody>
  {{#each rows}}
    {{{this}}}
  {{/each}}
  </tbody>
</table>