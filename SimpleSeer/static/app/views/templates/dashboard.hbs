<div id="dash_content" class="clearfix">
  <div class="graphBuilderControls">
    <!-- Top level breadcrumb nav -->
    <div class="breadcrumb">
      <span>Dashboard</span> &raquo; Chart Editor
    </div>
    
    <!-- Chart builder accordion -->
    <div class="accordion">
      <div class="group expanded">
        <div class="head">
          <h2>Chart Style</h2>
          <div class="toggle"></div>
        </div>
        
        <div class="content trim">
          <div class="chartStyleType">
            <input type="radio" name="chartType" value="area">
            <label>Area</label>
          </div>
          
          <div class="chartStyleType">
            <input type="radio" name="chartType" value="bar">
            <label>Bar</label>
          </div>
          
          <div class="chartStyleType">
            <input type="radio" name="chartType" value="line">
            <label>Line</label>
          </div>
          
          <div class="chartStyleType">
            <input type="radio" name="chartType" value="spline" checked="checked">
            <label>Spline</label>
          </div>          

          <div class="chartStyleType">
            <input type="radio" name="chartType" value="pane">
            <label>Pie</label>
          </div>
          
          <div class="chartStyleType">
            <input type="radio" name="chartType" value="scatter">
            <label>Scatter</label>
          </div>
        </div> 
      </div>
      
      <div class="group">
        <div class="head">
          <h2>Data &amp; Labels</h2>
          <div class="toggle"></div>
        </div>
        
        <div id="chartbuilder" class="content">
          <div class="oneLine">
            <label>Name:</label>
            <input type="text" name="name" value="{{chartSettings.attrib.name}}" class="chartinput">
          </div>
          
          <div class="oneLine">
            <label>X&nbsp;Axis:</label>
            <select name="olap_xaxis" class="chartinput">
            {{#chartSettings.vars}}
              <option value="{{fieldname}}" {{#if isx}}selected="selected"{{/if}}>{{varname}}</option>
            {{/chartSettings.vars}}
            </select>
          </div>
          
          <div class="oneLine">
            <label>X Title:</label>
            <input type="text" name="xTitle" class="chartinput">
          </div>
          
          <div class="oneLine">
            <label>Y Axis:</label>
            <select name="olap_yaxis" class="chartinput">
              {{#chartSettings.vars}}
              <option value="{{fieldname}}" {{#if isy}}selected="selected"{{/if}}>{{varname}}</option>
              {{/chartSettings.vars}}
            </select>
          </div>
          
          <div class="oneLine">
            <label>Y Title:</label>
            <input type="text" name="yTitle" class="chartinput">
          </div>
        </div>
      </div>
      
      <div class="group">
        <div class="head">
          <h2>Colors</h2>
          <div class="toggle"></div>
        </div>
        
        <div class="content">
          <div class="oneLine">
            <label>Palette:</label>
            <select id="palette_select">
            {{#each palettes}}
              <option {{#if this.default}}selected="selected" {{/if}}value="{{this.id}}">{{this.title}}</option>
            {{/each}}
            </select>
            <div id="palette_preview"></div>
          </div>
          
          <div class="oneLine floated clearfix">
            <label>Chart Color:</label>
            <input type='color' name='chartColor'/>
          </div>
                    
          <div class="oneLine floated clearfix">
            <label>Chart Title:</label>
            <input type='color' name='chartTitleColor'/>
          </div>
          
          <div class="oneLine floated clearfix">
            <label>Labels:</label>
            <input type='color' name='chartLabelColor'/>
          </div>          
        </div>
      </div>
      
      <div style="text-align: right">
        <button class="cancel">Cancel</button>
        <button class="save">Save</button>
      </div>
    </div>
  </div>
  
  <!-- Big chart for preview -->
  <div class="graphBuilderPreview">
    <img src="/img/chart.png">
  </div>
  
  <!-- Widgets added here -->
  <div class="dashboardGrid">
    <ul id="widget_grid" class="clearfix"></ul>    
  </div>
</div>
